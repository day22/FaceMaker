<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8B195"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <edu.up.facemaker.Face
                android:id="@+id/faceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF67280"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Color Chooser"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffC06C84   "
                    android:text="Red"
                    android:textColor="#000000" />

                <SeekBar
                    android:id="@+id/redSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffC06C84   "
                    android:max="255" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ff6C5B7B   "
                    android:text="Blue"
                    android:textColor="#000000" />

                <SeekBar
                    android:id="@+id/blueSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ff6C5B7B   "
                    android:max="255" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF355C7D"
                    android:text="Green"
                    android:textColor="#000000" />

                <SeekBar
                    android:id="@+id/greenSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF355C7D"
                    android:max="255" />

                <Spinner
                    android:id="@+id/hairSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffF67280   "
                android:orientation="vertical"
                android:padding="10dp">

                <RadioGroup
                    android:id="@+id/rGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/hairRadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF355C7D "
                        android:text="Hair " />

                    <RadioButton
                        android:id="@+id/eyeRadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF6C5B7B   "
                        android:text="Eyes" />

                    <RadioButton
                        android:id="@+id/skinRadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFC06C84"
                        android:text="Skin" />

                    <Button
                        android:id="@+id/randomButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Randomize" />

                </RadioGroup>

                <Button
                    android:id="@+id/randButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Random Face" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>